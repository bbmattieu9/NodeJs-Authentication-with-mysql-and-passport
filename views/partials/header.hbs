    /* CUSTOMIZE THE CAROUSEL
-------------------------------------------------- */

    /* Carousel base class */

    .carousel {
      margin-bottom: 10rem;
    }

    .carousel-caption,
    p {
      font-family: 'Comfortaa', sans-serif;
    }

    /* Since positioning the image, we need to help out the caption */

    .carousel-caption {
      bottom: 3rem;
      z-index: 10;
    }

    /* Declare heights because of positioning of img element */

    .carousel-item {
      height: 32rem;
      background-color: #1e1e1e;
    }

    .carousel-item>img {
      position: absolute;
      top: 0;
      left: 0;
      min-width: 100%;
      height: 32rem;
    }


    /* MARKETING CONTENT
-------------------------------------------------- */

    .bCarouselHeader {
      font-family: 'Comfortaa';
      color: #6b15a1;
      font-weight: 400;
    }

    .text-muted {
      color: #1997c6 !important;
    }

    .lead {
      font-size: 1.25rem;
      font-weight: 300;
      text-align: center;
    }

    /* Center align the text within the three columns below the carousel */

    .marketing .col-lg-4 {
      margin-bottom: 1.5rem;
      text-align: center;
    }

    /*.marketing h2 {
